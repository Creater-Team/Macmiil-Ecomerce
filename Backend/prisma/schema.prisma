// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}  


enum Roles {
  SUPERADMIN
  ADMIN
  USER
}

model users {
  userId Int @id @default(autoincrement())
  FirstName String
  LastName String
  Address String ?
  Email String @unique
  Password String
  Role Roles @default(USER)
  product product[]
  cart cart[]
 payment payment[]
 catagory catagory[]
}

model product {
  ProductId Int @id @default(autoincrement())
  title String
  Description String?
  Price String
  image String?
  Store String
  userId Int
  subatCagoryId Int
  users  users    @relation(fields: [userId], references: [userId])
  subCatagory  subCatagory   @relation(fields: [ subatCagoryId ], references: [ subatCagoryId])
  cart cart[]
  payment payment[]
}


model cart {
  cartId Int @id @default(autoincrement())
   qty Int 
   userId Int 
   ProductId Int 
   users  users    @relation(fields: [userId], references: [userId])
   product product    @relation(fields: [ProductId], references: [ProductId])
   payment payment[]
}

model payment {
   id Int @id @default(autoincrement())
   userId Int
   createAt Int?
   is_paid Boolean  @default(false)
   is_deliveredn Boolean @default(false)
   ProductId Int
   cartId Int
   product product    @relation(fields: [ProductId], references: [ProductId])
   users  users    @relation(fields: [userId], references: [userId])
   cart  cart    @relation(fields: [cartId], references: [cartId])
   

}

model subCatagory {
  subatCagoryId Int @id @default(autoincrement())
  type String
  img String
  CategoryId Int 
  Product product[]
  catogory catagory @relation(fields: [CategoryId], references: [CagoryId])
}


model catagory {
  CagoryId Int @id @default(autoincrement())
  type String
  userId Int 
  users  users    @relation(fields: [userId], references: [userId])
  subCategories subCatagory[]
}

